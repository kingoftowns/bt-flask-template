{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask App",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--host=0.0.0.0",
        "--port=8080",
        "--reload",
        "--debugger"
      ],
      "jinja": true,
      "justMyCode": false,
      "console": "integratedTerminal",
      "preLaunchTask": "Initialize Database"
    },
    {
      "name": "Python: Flask Shell",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development"
      },
      "args": [
        "shell"
      ],
      "jinja": true,
      "justMyCode": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}